# =====================================================
# 4images SEO URLs - Wariant PREMIUM
# =====================================================

RewriteEngine On
RewriteBase /tapeteos/

# =====================================================
# Ignoruj istniejące pliki i katalogi
# =====================================================
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule .* - [L]

# =====================================================
# SEO URLs
# =====================================================
# WYSZUKIWANIE: /szukaj/fraza-wyszukiwania → search.php?search_keywords=fraza
RewriteRule ^szukaj/([a-z0-9-]+)/?$ search.php?search_keywords=$1 [L,QSA,NC]

# WYSZUKIWANIE: /szukaj (bez frazy) → search.php
RewriteRule ^szukaj/?$ search.php [L,QSA,NC]

# OBRAZ: /tapeta/67619/zachod-slonca → details.php?image_id=67619
RewriteRule ^tapeta/([0-9]+)/([a-z0-9-]+)/?$ details.php?image_id=$1 [L,QSA,NC]

# KATEGORIA: /kategoria/440/abstrakcja → categories.php?cat_id=440
RewriteRule ^kategoria/([0-9]+)/([a-z0-9-]+)/?$ categories.php?cat_id=$1 [L,QSA,NC]

# =====================================================
# Bezpieczeństwo
# =====================================================
<Files ~ "^\.ht">
    Order allow,deny
    Deny from all
</Files>